<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.need.dashboard</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <form position="inside">
                <div class="app_settings_block" data-string="Need Dashboard" string="Need Dashboard" data-key="need_dashboard">
                    <h2>Dashboard Settings</h2>
                    <div class="row mt16 o_settings_container" name="need_dashboard_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="entry_strategy" string="Entry Strategy"/>
                                <div class="text-muted">
                                    Choose how to display dashboard entries
                                </div>
                                <div class="mt8">
                                    <field name="entry_strategy" class="o_light_label" widget="radio"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </field>
    </record>
</odoo> 